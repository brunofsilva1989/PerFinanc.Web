@model PerFinanc.Web.Models.Relatorios.RelatorioMensalViewModel

@{
    ViewData["Title"] = "Despesas Mensais";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h3 text-white mb-1">@Model.Titulo</h1>
            <div class="text-muted">Mês: <strong>@Model.Mes/@Model.Ano</strong></div>
        </div>

        <form method="get" class="d-flex gap-2">
            <input name="ano" type="number" class="form-control" style="max-width:120px" value="@Model.Ano" min="2000" />
            <input name="mes" type="number" class="form-control" style="max-width:90px" value="@Model.Mes" min="1" max="12" />
            <button class="btn btn-primary">Filtrar</button>
            <a asp-action="Index" class="btn btn-outline-light">Voltar</a>
        </form>
    </div>

    <div class="card bg-dark border-0 shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div class="text-muted">Total de despesas do mês</div>
            <div class="fs-4 fw-bold text-danger">
                @Model.Total.ToString("C")
            </div>
        </div>
    </div>

    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body">
            @if (Model.Linhas.Count == 0)
            {
                <div class="text-muted">Nenhuma despesa encontrada para este período.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Descrição</th>
                                <th>Categoria</th>
                                <th>Tipo</th>
                                <th class="text-end">Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Linhas)
                            {
                                <tr>
                                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Categoria</td>
                                    <td>@item.Tipo</td>
                                    <td class="text-end text-danger fw-semibold">@item.Valor.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <a class="btn btn-danger"
           asp-action="DespesasMensaisPdf"
           asp-route-ano="@Model.Ano"
           asp-route-mes="@Model.Mes">
            Baixar PDF
        </a>
    </div>
</div>
