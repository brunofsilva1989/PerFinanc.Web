@model PerFinanc.Web.Models.Freelance

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div class="container mt-4">

    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Excluir entrada Freelance</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-danger mb-3">
                <div class="card-body text-white">

                    <p class="mb-3 fw-bold text-danger text-center">
                        Tem certeza que deseja excluir entrada Freelance?
                    </p>

                    <dl class="row">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Valor)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Valor)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DataRecebimento)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DataRecebimento)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Categoria)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Categoria)
                        </dd>
                    </dl>                    
                </div>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-light">Voltar</a>

                <input type="submit" value="Excluir" class="btn btn-danger" />
                
            </form>

        </div>
    </div>
</div>
