@model PerFinanc.Web.Models.Freelance

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<div class="container mt-4">

    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Editar Entrada Freelancer</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-secondary">

                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label text-white"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Valor" class="control-label"></label>
                            <input asp-for="Valor" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataRecebimento" class="control-label"></label>
                            <input asp-for="DataRecebimento" class="form-control" />
                            <span asp-validation-for="DataRecebimento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="control-label"></label>
                            <input asp-for="Categoria" class="form-control" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>


                        <div class="d-flex justify-content-between">

                            <a asp-action="Index" class="btn btn-outline-light">Voltar</a>

                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                                                
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
