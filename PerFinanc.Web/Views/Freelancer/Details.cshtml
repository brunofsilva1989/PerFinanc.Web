@model PerFinanc.Web.Models.Freelance

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}


<div class="container mt-4">

    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Detalhes Freelancer</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-secondary mb-3">
                <div class="card-body">


                    <dl class="row mb-0 text-white">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Valor)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Valor)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DataRecebimento)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DataRecebimento)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Categoria)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Categoria)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Ano)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Ano)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Mes)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Mes)
                        </dd>
                    </dl>
                </div>                
            </div>

            <div class="d-flex justify-content-between px-4 mb-3">
                <a asp-action="Index" class="btn btn-outline-light">Voltar</a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            </div>
        </div>
    </div>



</div>
