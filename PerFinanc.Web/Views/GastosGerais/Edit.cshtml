@model PerFinanc.Web.Models.GastoGeral

@{
    ViewData["Title"] = "Editar Gasto";
    Layout = "_Layout";
}

@if (TempData["Mensagem"] != null)
{
    <script>
        Swal.fire("Sucesso!", "@TempData["Mensagem"]", "sucess");
    </script>
}

<div class="container mt-4">

    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Editar Gasto Geral</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label text-white"></label>
                            <input asp-for="Descricao" type="text" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Valor" class="form-label text-white"></label>
                            <input asp-for="Valor" type="number" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DataGasto" class="form-label text-white"></label>
                            <input asp-for="DataGasto" class="form-control" />
                            <span asp-validation-for="DataGasto" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label text-white"></label>
                            <input asp-for="Categoria" class="form-control" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ano" class="form-label text-white"></label>
                            <input asp-for="Ano" type="date" class="form-control" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mes" class="form-label text-white"></label>
                            <input asp-for="Mes" type="month" class="form-control" />
                            <span asp-validation-for="Mes" class="text-danger"></span>
                        </div>
                        
                        
                        <div class="d-flex justify-content-between">
                         
                            <a asp-action="Index" class="btn btn-outline-light">Voltar</a>
                            <button type="submit" value="Save" class="btn btn-primary">
                                Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
