@model IEnumerable<PerFinanc.Web.Models.GastoGeral>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container mt-4">

    <!-- Título + botão -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-white mb-0">Gastos Gerais</h1>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            + Nova conta fixa
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover table-sm mb-0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataGasto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataGasto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>