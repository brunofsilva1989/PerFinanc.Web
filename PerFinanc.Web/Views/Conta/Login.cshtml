@model PerFinanc.Web.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">

            <div class="pf-auth-card">


                <h3 class="pf-auth-title mb-1">Entrar</h3>
                <p class="pf-auth-subtitle mb-4">Acesse sua conta do PerFinanc</p>

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserNameOrEmail" class="form-label"></label>
                            <input asp-for="UserNameOrEmail" class="form-control" autocomplete="username" />
                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                        </div>

                        <button type="submit" class="pf-btn w-100">Entrar</button>

                        <div class="text-center mt-3">
                            <span class="text-muted">Não tem conta?</span>
                            <a asp-action="Register" class="text-decoration-none">Criar agora</a>
                        </div>
                    </form>
                
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
