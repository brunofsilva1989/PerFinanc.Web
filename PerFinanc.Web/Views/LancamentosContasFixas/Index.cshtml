@model IEnumerable<PerFinanc.Web.Models.LancamentoContaFixa>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@if (TempData["Mensagem"] != null)
{
    <script>
        Swal.fire("Sucesso!", "@TempData["Mensagem"]", "success");
    </script>
}


<div class="container mt-4">

    <!-- Título + botão -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-white mb-0">Lançamentos de Contas Fixas</h1>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            + Novo Lançamento
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover table-sm mb-0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContaFixa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorPrevisto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorPago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataPagamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Observacao)
                    </th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContaFixa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorPrevisto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorPago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataPagamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Observacao)
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>