@model PerFinanc.Web.Models.ContaFixa

@{
    ViewData["Title"] = "Editar Conta";
    Layout = "_Layout";
}

<div class="container mt-4">

    <!-- Título -->
    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Editar Conta Fixa</h1>
    </div>

    <!-- Linha centralizada -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label text-white"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiaVencimento" class="form-label text-white"></label>
                            <input asp-for="DiaVencimento" class="form-control" />
                            <span asp-validation-for="DiaVencimento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ValorPadrao" class="form-label text-white"></label>
                            <input asp-for="ValorPadrao" class="form-control" />
                            <span asp-validation-for="ValorPadrao" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" asp-for="JaVemDescontado" />
                            <label class="form-check-label text-white">
                                @Html.DisplayNameFor(model => model.JaVemDescontado)
                            </label>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Ativo" />
                            <label class="form-check-label text-white">
                                @Html.DisplayNameFor(model => model.Ativo)
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
