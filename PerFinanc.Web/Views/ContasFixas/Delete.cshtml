@model PerFinanc.Web.Models.ContaFixa

@{
    ViewData["Title"] = "Excluir Conta Fixa";
    Layout = "_Layout";
}

<div class="container mt-4">

    <!-- Título centralizado -->
    <div class="mb-3 text-center">
        <h1 class="h3 text-white mb-0">Excluir Conta Fixa</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card bg-dark border-danger mb-3">
                <div class="card-body text-white">

                    <p class="mb-3 fw-bold text-danger text-center">
                        Tem certeza que deseja excluir esta conta fixa?
                    </p>

                    <dl class="row mb-0">
                        <dt class="col-sm-5">@Html.DisplayNameFor(m => m.Nome)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.Nome)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(m => m.DiaVencimento)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.DiaVencimento)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(m => m.ValorPadrao)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.ValorPadrao)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(m => m.JaVemDescontado)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.JaVemDescontado)</dd>

                        <dt class="col-sm-5">@Html.DisplayNameFor(m => m.Ativo)</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.Ativo)</dd>
                    </dl>

                </div>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-light">
                    Voltar
                </a>

                <button type="submit" class="btn btn-danger">
                    Excluir
                </button>
            </form>

        </div>
    </div>

</div>
