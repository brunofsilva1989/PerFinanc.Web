@model IEnumerable<PerFinanc.Web.Models.ContaFixa>

@{
    ViewData["Title"] = "Contas Fixas";
    Layout = "_Layout";
}

@if (TempData["Mensagem"] != null)
{
    <script>
        Swal.fire("Sucesso!", "@TempData["Mensagem"]", "sucess");
    </script>
}

<div class="container mt-4">

    <!-- Título + botão -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-white mb-0">Contas Fixas</h1>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            + Nova conta fixa
        </a>
    </div>

    <!-- Tabela responsiva -->
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover table-sm mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.DiaVencimento)</th>
                    <th>@Html.DisplayNameFor(model => model.ValorPadrao)</th>
                    <th>@Html.DisplayNameFor(model => model.JaVemDescontado)</th>
                    <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaVencimento)</td>
                        <td>@Html.DisplayFor(modelItem => item.ValorPadrao)</td>
                        <td>@Html.DisplayFor(modelItem => item.JaVemDescontado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
