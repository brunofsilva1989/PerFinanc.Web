@model PerFinanc.Web.Models.ContatoViewModel

@{
    ViewData["Title"] = "Contato";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="pf-card p-4 p-md-5">

                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
                    <div>
                        <h2 class="mb-1">Fale com a gente</h2>
                        <p class="text-muted mb-0">
                            Se tiver dúvida, sugestão ou quiser relatar um problema, manda aqui 👇
                        </p>
                    </div>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        Voltar
                    </a>
                </div>

                <hr class="my-4" />

                <div class="row g-4">
                    <!-- FORM -->
                    <div class="col-12 col-lg-7">
                        <form asp-action="Contato" asp-controller="Home" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" placeholder="Seu nome" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="seuemail@dominio.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Assunto" class="form-label"></label>
                                <input asp-for="Assunto" class="form-control" placeholder="Ex.: Dúvida sobre lançamento" />
                                <span asp-validation-for="Assunto" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Mensagem" class="form-label"></label>
                                <textarea asp-for="Mensagem" class="form-control" rows="6"
                                          placeholder="Escreve sua mensagem aqui..."></textarea>
                                <span asp-validation-for="Mensagem" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    Enviar mensagem
                                </button>

                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>

                        @* Mensagem de sucesso via TempData *@
                        @if (TempData["ContatoOk"] is string okMsg)
                        {
                            <div class="alert alert-success mt-4 mb-0">
                                @okMsg
                            </div>
                        }
                    </div>

                    <!-- INFO -->
                    <div class="col-12 col-lg-5">
                        <div class="p-4 rounded-3 border bg-body-tertiary">
                            <h5 class="mb-3">Canais</h5>

                            <div class="mb-3">
                                <div class="fw-semibold">E-mail</div>
                                <a href="mailto:contato@perfinanc.com">contato@perfinanc.com</a>
                                <div class="text-muted small">Resposta em horário comercial</div>
                            </div>

                            <div class="mb-3">
                                <div class="fw-semibold">WhatsApp</div>
                                <a href="https://wa.me/5500000000000" target="_blank" rel="noopener">
                                    +55 (00) 00000-0000
                                </a>
                                <div class="text-muted small">Se quiser, eu deixo isso dinâmico também</div>
                            </div>

                            <div>
                                <div class="fw-semibold">Localização</div>
                                <div class="text-muted">Brasil</div>
                            </div>

                            <hr class="my-4" />

                            <div class="text-muted small">
                                Dica: você pode usar esse formulário pra criar um “relatar bug” também.
                                Aí a gente adiciona campos como módulo/tela e prioridade.
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
